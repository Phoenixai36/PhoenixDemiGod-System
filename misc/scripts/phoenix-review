#!/usr/bin/env python3
"""
Phoenix Hydra System Review CLI Entry Point

This script provides the main entry point for the Phoenix Hydra system review
command-line interface.
"""

import sys
import os
from pathlib import Path

# Add the src directory to the Python path
src_path = Path(__file__).parent.parent / 'src'
sys.path.insert(0, str(src_path))

try:
    from phoenix_system_review.cli import main
    main()
except ImportError as e:
    print(f"Error: Failed to import Phoenix System Review CLI: {e}")
    print("Make sure you're running this from the Phoenix Hydra project root.")
    sys.exit(1)
except Exception as e:
    print(f"Error: {e}")
    sys.exit(1)